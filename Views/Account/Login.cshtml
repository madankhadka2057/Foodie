@model UserEdit
<div class="container " style="margin-top:30px">
	<div class="col-md-6 col-md-offset-1 mx-auto">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><strong>Sign Up </strong></h3>
			</div>

			<div class="panel-body">
				<form role="form" asp-action="Login" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class=" text-danger py-3">
					</div>
					<div class="row ">
						<div class="col-xs-12 col-sm-6 col-md-12 pt-4">
							<div class="form-group">
								<input type="text" asp-for="Email" name="Email" id="Email" class="form-control mb-1" placeholder="Email" tabindex="1">
								<span asp-validation-for="Email" class="alert-danger "></span>
							</div>
						</div>
					</div>
					<div class="row ">
						<div class="col-xs-12 col-sm-6 col-md-12 pt-4">
							<div class="form-group">
								<input type="password" asp-for="Passwrod" name="Passwrod" id="Passwrod" class="form-control mb-1" placeholder="Passwrod" tabindex="1">
								<span asp-validation-for="Passwrod" class="alert-danger"></span>
							</div>
						</div>
					</div>
					<button type="submit" class="btn my-4 btn-success">Sign in</button>

					<hr style="margin-top:10px;margin-bottom:10px;">

					<div class="form-group">

						<div style="font-size:85%">
							if you have an account!
							<a asp-action="Register" asp-controller="Home">
								Sign Up Here
							</a>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>


